@model IEnumerable<ProjetAiopMVC.Models.ENSEIGNANT>

@{
    ViewBag.Title = "Index";
}

<div id="container">
    <div class="page-header">
        <div id="alert_1">
            <img src="~/images/ens-sear.png" width="100" height="100" alt="User" />
        </div>
        <br />
        <h1>Gestion des enseignants</h1>
    </div>
        <div class="row">
            <div class="container-fluid" id="hero-home"  style="margin-bottom: 30px">
                <div class="row">
                    <div class="span5 offset1">
                        <div class="hero-unit">
                            <h3>Visualisation des enseignants</h3>
                            <p>
                                Consultation des différents enseignants et leurs
								caractéristiques
                            </p>
                            <p>
                                <a href="~/enseignant/visaenseignant">
                                    <input type="button"
                                        class="btn btn-inverse btn-large" value="En savoir plus">
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="span5 offset2">
                        <div class="hero-unit">
                            <h3>Ajouter un enseignant</h3>
                            <p>
                                Ajout d'un nouvel enseignant à l'application ainsi que ces
								caractéristiques
                            </p>
                            <p>
                                <a href="~/enseignant/Create">
                                    <input type="button"
                                        class="btn btn-inverse btn-large" value="En savoir plus">
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span5 offset1">
                        <div class="hero-unit">
                            <h3>Modification d'un enseignant</h3>
                            <p>
                                Modification des différentes caractéristiques liées à un
								enseignant
                            </p>
                            <p>
                                <a href="~/enseignant/modifenseignant">
                                    <input type="button"
                                        class="btn btn-inverse btn-large" value="En savoir plus">
                                </a>
                            </p>
                        </div>
                    </div>
                    <div class="span5 offset2">
                        <div class="hero-unit">
                            <h3>Suppression d'un enseignant</h3>
                            <p>
                                Suppression d'un enseignant et de ces caractéristiques de
								l'application
                            </p>
                            <p>
                                <a href="~/enseignant/supenseignant">
                                    <input type="button"
                                        class="btn btn-inverse btn-large" value="En savoir plus">
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
